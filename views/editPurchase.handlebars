<h1>Edit purchase</h1>

<form action="/purchases/update/{{data.id}}" method="POST">
	<div class="">
	</div>
	<div>
		<label for="date">date</label>
		<input class="datepicker" type="date" name="date" value="{{data.date}}">
	</div>
	<div>
		<label for="quantity">quantity</label>
		<input type="number" name="quantity" value="{{data.quantity}}">
	</div>
	<div>
		<label for="cost">cost</label>
		<input type="text" name="cost" value="{{data.cost}}">
	</div>
	<label>Product</label>
	<select class="browser-default" name="product_id">
		{{#purchases}}
			<option value="{{id}}"> {{product}}</option>
		{{/purchases}}
	</select>
	<input class="btn" type="submit" value="Edit Purchases">
</form>
